<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape>
            <corners
                android:radius="@dimen/_50sdp" />
            <gradient
                android:angle="90"
                android:endColor="#00FF0A"
                android:startColor="#1A611D"
                android:type="linear" />
            <size
                android:width="@dimen/_82sdp"
                android:height="@dimen/_82sdp" />

            <stroke
                android:width="@dimen/_2sdp"
                android:color="#CDA93E" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>
            <corners
                android:radius="@dimen/_50sdp" />
            <gradient
                android:angle="90"
                android:endColor="#00FF7B"
                android:startColor="#1A6134"
                android:type="linear" />
            <size
                android:width="@dimen/_82sdp"
                android:height="@dimen/_82sdp" />

            <stroke
                android:width="@dimen/_2sdp"
                android:color="#CDA93E" />
        </shape>
    </item>
</selector>